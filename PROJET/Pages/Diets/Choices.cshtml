@page
@model ChoicesModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Choices</h1>

<h4>Diet</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Diets" class="control-label"></label>
                @foreach (var diet in Model.Diets)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="@Html.DisplayNameFor(model => model.SelectedDiets)" value="@diet.Id" @(Model.SelectedDiets.Contains(diet.Id) ? "checked" : "")/>
                        <label class="form-check-label">@diet.Name</label>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Recipes/Index">Back to List</a>
</div>
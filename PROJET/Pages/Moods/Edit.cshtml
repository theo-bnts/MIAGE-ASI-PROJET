@page
@model PROJET.Pages.Moods.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Humeur</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Mood.Id" />
            <div class="form-group">
                <div class="form-group">
                    <label>Choix Humeur :</label>
                    <select asp-for="Mood.RefMoodId" class="form-control" asp-items="ViewBag.ListMoodID"></select>
                    <span asp-validation-for="Mood.RefMoodId" class="text-danger"></span>
                </div>

                <span asp-validation-for="Mood.RefMoodId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Date de l'humeur :</label>
                <input type="date" asp-for="Mood.Date" value="@ViewData["DateDuJour"]" class="form-control" />
                <span asp-validation-for="Mood.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!--<label asp-for="Humeur.UtilisateurID" class="control-label"></label> -->
                <input type="hidden" asp-for="Mood.ApplicationUserId" class="form-control" value="@ViewData["LutilisateurID"]" />
                <!-- <span asp-validation-for="Humeur.UtilisateurID" class="text-danger"></span> -->
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


@page
@model PROJET.Pages.Emplois.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Emploi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Emploi.Id" />
            <div class="form-group">
                <!--<label asp-for="Emploi.LutilisateurID" class="control-label"></label>-->
                <input type="hidden" asp-for="Emploi.ApplicationUserId" class="form-control" value="@ViewData["LutilisateurID"]" />
              <!--  <span asp-validation-for="Emploi.LutilisateurID" class="text-danger"></span>-->
            </div>
            <div class="form-group">
                <label asp-for="Emploi.ApplicationUserLastName" class="control-label">Nom Utilisateur : </label>
                <input asp-for="Emploi.ApplicationUserLastName" class="form-control" />
                <span asp-validation-for="Emploi.ApplicationUserLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Prénom de l'utilisateur : </label>
                <input asp-for="Emploi.ApplicationUserFirstName" class="form-control" />
                <span asp-validation-for="Emploi.ApplicationUserFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Choix Catégorie : </label>
                <select asp-for="Emploi.SocioProfessionalCategoryId" class="form-control" asp-items="ViewBag.LaCategorieID"></select>
                <span asp-validation-for="Emploi.SocioProfessionalCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
